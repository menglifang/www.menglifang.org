<article class="unit-article layout-page">
	<div class="unit-inner unit-article-inner">
		<div class="content">
			<header>
				<div class="unit-head">
					<div class="unit-inner unit-head-inner">
						<h1 class="h3 entry-title">{{ page.title }}</h1>
					</div><!-- unit-inner -->
				</div><!-- unit-head -->
			</header>

      <div class="bd">
        <table border="1" cellspacing="0" cellpadding="0">
          <!-- 添加边栏  -->
          <tr>
            <td>
               <div class="unit-body-sidebar">
		  <div calss="unit-body-category">
		    <div>
		      分类
		    </div>
		    <div>
		      {% for category in site.categories %}
		      <a href="/categories.html#{{ category | first }}-ref">{{ category | first }}</a> ({{ category | last | size }})<br />
		      {% endfor %}
		    </div>
		  </div>
		</div>
            </td>
            <td rowspan="2">
              	<div class="entry-content">
			{{ content }}
		</div><!-- entry-content -->
            </td>
          </tr>
          <tr>
            <td>
		<div class="unit-body-tag">
		    <div>标签</div>
		    <div>{% tag_cloud %}</div>
		  </div>
		</div>
		
	    </td>
          </tr>
        <div class="unit-body-sidebar">
          <div calss="unit-body-category">
            <div>
              分类
            </div>
            <div>
              {% for category in site.categories %}
              <a href="/categories.html#{{ category | first }}-ref">{{ category | first }}</a> ({{ category | last | size }})<br />
              {% endfor %}
            </div>
          </div>
          <div class="unit-body-tag">
            <div>标签</div>
            <div>{% tag_cloud %}</div>
          </div>
        </div>
				<div class="entry-content">
					{{ content }}
				</div><!-- entry-content -->
			</div><!-- bd -->

			<footer class="unit-foot">
				<div class="unit-inner unit-foot-inner">
					<p class="gotop">
						<a href="#page">回到顶部</a>
					</p>
				</div>
			</footer>

		</div><!-- content -->
	</div><!-- unit-inner -->
</article>
